<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="891dp"
    android:layout_height="411dp"
    tools:context=".MainActivity">


    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/image_batter"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,ImageContrastCheck" />

    <com.example.pokemomproj.CharacterView
        android:id="@+id/characterView"
        android:layout_width="550dp"
        android:layout_height="304dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.439" />

    <com.example.pokemomproj.BotView
        android:id="@+id/botView"
        android:layout_width="550dp"
        android:layout_height="304dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.439" />

    <com.example.pokemomproj.JoystickView
        android:id="@+id/joystickView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.008"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/skillButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="68dp"
        android:text="@string/use_skill_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/gifImageView"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnHealSkill"
        android:layout_width="126dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="232dp"
        android:layout_marginEnd="52dp"
        android:text="Hồi Máu"
        app:layout_constraintEnd_toEndOf="@+id/gifImageView"
        app:layout_constraintTop_toTopOf="@+id/gifImageView"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/btnEarthQuakeSkill2"
        android:layout_width="126dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="52dp"
        android:text="Động Đất"
        app:layout_constraintEnd_toEndOf="@+id/gifImageView"
        app:layout_constraintTop_toTopOf="@+id/gifImageView"
        tools:ignore="MissingConstraints" />

    <com.example.pokemomproj.hp_bar
        android:id="@+id/characterHpBar"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="132dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/gifImageView"
        app:layout_constraintTop_toTopOf="@+id/gifImageView"
        tools:ignore="MissingConstraints" />

    <com.example.pokemomproj.mana_bar
        android:id="@+id/characterManaBar"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_below="@id/characterHpBar"
        android:layout_marginStart="132dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="@+id/gifImageView"
        app:layout_constraintTop_toTopOf="@+id/gifImageView"
        tools:ignore="MissingConstraints" />

    <com.example.pokemomproj.mana_bar
        android:id="@+id/botManaBar"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_below="@id/botHpBar"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="568dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="@+id/gifImageView"
        app:layout_constraintTop_toTopOf="@+id/gifImageView"
        tools:ignore="MissingConstraints" />

    <com.example.pokemomproj.hp_bar
        android:id="@+id/botHpBar"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="568dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/gifImageView"
        app:layout_constraintTop_toTopOf="@+id/gifImageView"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>