<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="280dp"
        android:layout_marginTop="16dp"
        android:paddingBottom="16dp"
        android:text="Select Your Gift"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/character1"
        android:layout_width="96dp"
        android:layout_height="98dp"
        android:layout_gravity="center"
        android:layout_marginStart="72dp"
        android:layout_marginTop="148dp"
        android:contentDescription="Character 1"
        android:padding="8dp"
        android:src="@drawable/g_Lum_Berry"
        app:layout_constraintEnd_toStartOf="@+id/character2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/character2"
        android:layout_width="96dp"
        android:layout_height="98dp"
        android:layout_gravity="center"
        android:layout_marginStart="240dp"
        android:layout_marginTop="148dp"
        android:contentDescription="Character 2"
        android:padding="8dp"
        android:src="@drawable/g_Oran_Berry"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/character3"
        android:layout_width="96dp"
        android:layout_height="98dp"
        android:layout_gravity="center"
        android:layout_marginStart="408dp"
        android:layout_marginTop="148dp"
        android:contentDescription="Character 3"
        android:padding="8dp"
        android:src="@drawable/g_Persim_Berry"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/character4"
        android:layout_width="96dp"
        android:layout_height="98dp"
        android:layout_gravity="center"
        android:layout_marginStart="552dp"
        android:layout_marginTop="148dp"
        android:contentDescription="Character 4"
        android:padding="8dp"
        android:src="@drawable/g_Sitrus_Berry"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>