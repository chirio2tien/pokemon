<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Your Character"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:paddingBottom="16dp"/>

        <ImageView
            android:id="@+id/character1"
            android:layout_width="249dp"
            android:layout_height="164dp"
            android:layout_gravity="center"
            android:contentDescription="Character 1"
            android:padding="8dp"
            android:src="@drawable/giratina" />

        <ImageView
            android:id="@+id/character2"
            android:layout_width="257dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="Character 2"
            android:padding="8dp"
            android:src="@drawable/gardevoir" />

    </LinearLayout>